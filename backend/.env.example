# Database Configuration
# For local PostgreSQL:
# DATABASE_URL=postgresql+psycopg2://postgres:your_password@localhost:5432/store
#
# For AWS RDS (recommended for production):
# DATABASE_URL=postgresql+psycopg2://postgres:your_password@your-instance.c9akciq32.us-east-1.rds.amazonaws.com:5432/store

DATABASE_URL=postgresql+psycopg2://postgres:your_password@localhost:5432/store
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=your_password
DB_NAME=store

# Connection Pool Settings (for cloud databases)
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20

# SQL Logging (set to True for debugging)
SQL_ECHO=False

# Application Settings
ENVIRONMENT=development
DEBUG=True
LOG_LEVEL=INFO

# Security (Generate a secret key with: openssl rand -hex 32)
SECRET_KEY=your-secret-key-here-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# API Configuration
API_TITLE=Store Management API
API_VERSION=1.0.0
API_DESCRIPTION=Enterprise-grade Store Management API designed to showcase backend architecture, business rules, and cloud-ready design.
ALLOWED_HOSTS=["localhost:8000", "127.0.0.1:8000"]